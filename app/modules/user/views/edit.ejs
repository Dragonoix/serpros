<% layout(layout_directory+'/mainLayout') -%>

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <!-- <h2 class="content-header-title mb-0"><%= page_title %></h2> -->
                        <h2><%= page_title %></h2>
                        <!-- <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="<%= generateUrl('admin.user.listing') %>">User</a>
                                </li>
                                <li class="breadcrumb-item active"> <%= page_title %>
                                </li>
                            </ol>
                        </div> -->
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- <div class="card-header border-bottom">
                            <h4 class="card-title"></h4>
                        </div> -->
                        <div class="card-body py-2">
                            <!-- form -->
                            <form class="validate-form" id="editUserForm" action="<%= generateUrl("user.update") %>" method="POST" enctype='multipart/form-data'>
                                <div class="row">
                                    <div class="col-12 col-sm-6 mb-1">
                                        <label class="form-label" for="full_name">Full Name</label>
                                        <input type="text" class="form-control" name="full_name" id="full_name" value = "<%= response.full_name %>">
                                    </div>
                                    <div class="col-12 col-sm-6 mb-1">
                                        <label class="form-label" for="email">Email</label>
                                        <input type="text" class="form-control" name="email" id="email" value = "<%= response.email %>">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-4 mb-1">
                                        <label class="form-label" for="user-type">User Type</label>
                                        <select id="user_type" name="user_type" class="form-select text-capitalize mb-md-0 mb-2xx cursor-pointer" required>
                                            <option selected > Select a type </option>
                                            <!-- <option   <%= response.user_type=='admin' ? 'selected':'' %> value="og"> OG Winner </option> -->
                                            <option  <%= response.user_type=='client' ? 'selected':'' %> value="client"> Client </option>
                                            <option  <%= response.user_type=='service_provider' ? 'selected':'' %> value="service_provider"> Service Provider </option>                                  
                                        </select>
                                    </div>
                                    <div class="col-12 col-sm-4 mb-1">
                                        <label class="form-label" for="cityName">City</label>
                                        <input type="text" class="form-control" name="cityName" id="cityName" value = "<%= response.cityName %>">
                                    </div>
                                    <div class="col-12 col-sm-4 mb-1">
                                        <label class="form-label" for="countryName">Country</label>
                                        <input type="text" class="form-control" name="countryName" id="countryName" value = "<%= response.countryName %>">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12 col-sm-6 mb-1">
                                        <label class="form-label" for="stateName">State</label>
                                        <input type="text" class="form-control" name="stateName" id="stateName" value = "<%= response.stateName %>">
                                    </div>
                                    <div class="col-12 col-sm-6 mb-1">
                                        <label class="form-label" for="zipCode">ZIP</label>
                                        <input type="text" class="form-control" name="zipCode" id="zipCode" value = "<%= response.zipCode %>">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary mt-1 me-1">Update</button>
                                    <button type="reset" class="btn btn-outline-secondary mt-1">Discard</button>
                                    <a type="reset" class="btn btn-outline-danger mt-1" href="<%= generateUrl("admin.user.listing") %>">Back</a>
                                </div>
                            </div>
                            <input type="hidden" name="id" value="<%= response._id %>">
                            </form>
                            <!--/ form -->
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>

<style>
    .ql-editor {
        height: 150px;
    }
</style>